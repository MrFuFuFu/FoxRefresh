<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize" />

    <mrfu.foxrefresh.lib.PullRefreshListView
        xmlns:widget="http://schemas.android.com/apk/res-auto"
        android:id="@+id/pull_refresh_progress_baseview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:cacheColorHint="#00000000"
        android:divider="@android:color/transparent"
        android:dividerHeight="5dp"
        android:fadingEdge="none"
        android:fastScrollEnabled="false"
        android:listSelector="@android:color/transparent"
        android:overScrollMode="never"
        android:layout_below="@+id/toolbar"
        widget:smooth_progress_color="#ffff4081"
        widget:smooth_progress_height="2.5dp"
        widget:refresh_booter_height="50dp"
        widget:refresh_header_height="52dp"/>

</RelativeLayout>
